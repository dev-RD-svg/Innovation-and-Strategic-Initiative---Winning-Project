@page
@model BookListRazor.Pages.BookList.DonateEwasteModel

<h2 class="text-info">Please provide employee details below to continue: </h2>
<br />

<div class=" border container" style="padding: 30px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="person.FName">First Name:</label>
            </div>
            <div class="col-6">
                <input asp-for="person.FName"></input>
            </div>
            <span asp-validation-for="person.FName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="person.LName">Last Name:</label>
            </div>
            <div class="col-6">
                <input asp-for="person.LName"></input>
            </div>
            <span asp-validation-for="person.LName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="person.Emailid">Deloitte Email ID:</label>
            </div>
            <div class="col-6">
                <input asp-for="person.Emailid"></input>
            </div>
            <span asp-validation-for="person.Emailid" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="person.ContactNo">Contact Number:</label>
            </div>
            <div class="col-6">
                <input asp-for="person.ContactNo"></input>
            </div>
            <span asp-validation-for="person.ContactNo" class="text-danger"></span>
        </div>

        <p>Provide the pickup location:</p>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="person.line1">Address Line 1:</label>
            </div>
            <div class="col-6">
                <input asp-for="person.line1"></input>
                @*<textarea asp-for="person.line1" name="w3review" rows="1" cols="50"></textarea>*@
            </div>
            <span asp-validation-for="person.line1" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="person.line2">Address Line 2:</label>
            </div>
            <div class="col-6">
                <input asp-for="person.line2"></input>
                @*<textarea asp-for="person.line2" name="w3review" rows="1" cols="50"></textarea>*@
            </div>
            <span asp-validation-for="person.line2" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="person.city">City:</label>
            </div>
            <div class="col-6">
                <input asp-for="person.city"></input>
            </div>
            <span asp-validation-for="person.city" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="person.state">State:</label>
            </div>
            <div class="col-6">
                <input asp-for="person.state"></input>
            </div>
            <span asp-validation-for="person.state" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="person.Pincode">Pincode:</label>
            </div>
            <div class="col-6">
                <input asp-for="person.Pincode"></input>
            </div>
            <span asp-validation-for="person.Pincode" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>

        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <a asp-page="/WorldClimate/Ewaste" class="btn btn-outline-success form-control">Previous</a> @*text-white*@
            </div>

        </div>
    </form>

</div>

@section Scripts{
    <partial FName="_ValidationScriptsPartial" />
}