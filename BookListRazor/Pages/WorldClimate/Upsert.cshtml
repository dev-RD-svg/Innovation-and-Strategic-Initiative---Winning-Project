@page
@model BookListRazor.Pages.BookList.UpsertModel
<br />
<h2 class="text-info">@(Model.Book.Id!=0 ?"Edit" :"Create")</h2>
<br />

<div class=" border container" style="padding: 30px">
    <form method="post">
        @if (Model.Book.Id != 0)
        {
            <input type="hidden" asp-for="Book.Id" />
        }

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.FName"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.FName"></input>
            </div>
            <span asp-validation-for="Book.FName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.LName"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.LName"></input>
            </div>
            <span asp-validation-for="Book.LName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Emailid"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Emailid"></input>
            </div>
            <span asp-validation-for="Book.Emailid" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">@(Model.Book.Id != 0 ? "Update":"Create")</button>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a> @*text-white*@
            </div>
        </div>
    </form>

</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

